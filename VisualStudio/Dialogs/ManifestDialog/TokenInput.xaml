<UserControl x:Class="LaubPlusCo.VisualStudio.HelixTemplates.Dialogs.ManifestDialog.TokenInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaubPlusCo.VisualStudio.HelixTemplates.Dialogs.ManifestDialog"
             mc:Ignorable="d" d:DesignWidth="400">
    <Grid Margin="0,5,0,0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
      <Label Grid.Row="0" FontWeight="DemiBold" Width="Auto" HorizontalAlignment="Left" MaxWidth="450"  Name="TokenDisplayNameLabel" />
      <TextBox Grid.Row="1" MinWidth="400" Height="25" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" Name="TokenValueInputBox" />
    <StackPanel Name="FolderBrowseInput"  Orientation="Horizontal" Grid.Row="1" Visibility="Hidden">
      <TextBox MinWidth="350" Height="25" Width="Auto" HorizontalAlignment="Stretch" Name="TokenValueAsPathInputBox" />
      <Button Click="BrowseFolders" Height="25" Width="50" HorizontalAlignment="Right">...</Button>
    </StackPanel>
  </Grid>
</UserControl>
